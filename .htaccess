# =====================================================
# .htaccess - Newcom Argentina
# =====================================================

# Activar motor de reescritura
RewriteEngine On

# =====================================================
# 1. FORZAR HTTPS + WWW (Redirección canónica)
# =====================================================
# Redirigir HTTP a HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirigir non-www a www (con HTTPS)
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteCond %{HTTP_HOST} !^$
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [L,R=301]

# =====================================================
# 2. BLOQUEAR BOTS MALICIOSOS
# =====================================================
RewriteCond %{HTTP_USER_AGENT} (ahrefs|semrush|mj12bot|dotbot|rogerbot|gigabot|buzzsumo|blexbot|linkfluence) [NC,OR]
RewriteCond %{HTTP_USER_AGENT} (HTTrack|clshttp|harvest|extract|grab|miner|siphon|sitesucker|webcopier) [NC,OR]
RewriteCond %{HTTP_USER_AGENT} (libwww-perl|python-requests|scrapy|curl|wget) [NC]
RewriteRule .* - [F,L]

# Bloquear acceso directo a archivos sensibles
<FilesMatch "(^\.htaccess|\.htpasswd|\.git|\.env|composer\.(json|lock))$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# =====================================================
# 3. SEGURIDAD - HEADERS
# =====================================================
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevenir MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Remover header que expone versión de servidor
    Header unset X-Powered-By
    Header unset Server
</IfModule>

# =====================================================
# 4. COMPRESIÓN GZIP
# =====================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE text/xml
</IfModule>

# =====================================================
# 5. CACHÉ DE RECURSOS ESTÁTICOS
# =====================================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imágenes - 1 año
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Videos - 1 año
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    
    # Fuentes - 1 año
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # CSS y JS - 1 mes
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # HTML - sin caché (siempre fresco)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# =====================================================
# 6. PÁGINAS DE ERROR PERSONALIZADAS (opcional)
# =====================================================
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# =====================================================
# 7. PREVENIR LISTADO DE DIRECTORIOS
# =====================================================
Options -Indexes

# =====================================================
# 8. CHARSET UTF-8
# =====================================================
AddDefaultCharset UTF-8
